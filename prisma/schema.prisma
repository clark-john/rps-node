generator client {
  provider = "prisma-client-js"
}

// to switch db to mysql
// replace provider with "mysql"
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model History {
  gamenumber Int 
  wins Int
  loses Int
  tie Int
  total_games Int
  dateplayed String @db.VarChar(30) @unique
  playedBy String @db.VarChar(200)
}

model User {
  name String @db.VarChar(200) @unique
  password String @db.VarChar(200)
  birthdate Int @db.SmallInt()
  birthmonth String @db.VarChar(10)
  birthyear Int
  gender Gender 
  highscore Int
}

enum Gender {
  Male 
  Female
}
